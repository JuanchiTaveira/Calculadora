<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="0dp">

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="5"
            android:columnCount="5">

        <Button
                android:layout_height="wrap_content"
                android:id="@+id/btnDivide4"
                android:textSize="14sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                android:text="x^2"
                android:layout_column="4"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:layout_height="wrap_content"
                android:id="@+id/btnMultiply4"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                android:text="√x"
                android:layout_column="4"
                android:layout_row="1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:layout_height="wrap_content"
                android:id="@+id/btnSubtract4"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                android:text="sen"
                android:layout_column="4"
                android:layout_row="2"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:layout_height="wrap_content"
                android:id="@+id/btnSum4"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                android:text="cos"
                android:layout_column="4"
                android:layout_row="3"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:text="00"
                android:layout_height="wrap_content"
                android:id="@+id/btn00"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                app:strokeWidth="1dp"
                app:strokeColor="#673AB7"
                android:backgroundTint="#FFFFFF"
                android:textColor="#673AB7"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:text="0"
                android:layout_height="wrap_content"
                android:id="@+id/btn0"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                app:strokeWidth="1dp"
                app:strokeColor="#673AB7"
                android:backgroundTint="#FFFFFF"
                android:textColor="#673AB7"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:text="."
                android:layout_height="wrap_content"
                android:id="@+id/btnDecimal"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                app:strokeWidth="1dp"
                app:strokeColor="#673AB7"
                android:backgroundTint="#FFFFFF"
                android:textColor="#673AB7"
                android:layout_row="4"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:layout_height="wrap_content"
                android:id="@+id/btnEquals"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                android:text="="
                android:layout_column="3"
                android:layout_row="4"
                android:layout_width="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginLeft="17dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:text="C"
                android:layout_height="wrap_content"
                android:id="@+id/btnClear"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:layout_height="wrap_content"
                android:id="@+id/btnDelete"

                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                android:text="⌫"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:layout_height="wrap_content"
                android:id="@+id/btnPercentage"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                android:text="%"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:layout_height="wrap_content"
                android:id="@+id/btnDivide"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                android:text="÷"
                android:layout_column="3"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:layout_height="wrap_content"
                android:id="@+id/btnMultiply"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                android:text="x"
                android:layout_column="3"
                android:layout_row="1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:text="7"
                android:layout_height="wrap_content"
                android:id="@+id/btn7"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                app:strokeWidth="1dp"
                app:strokeColor="#673AB7"
                android:backgroundTint="#FFFFFF"
                android:textColor="#673AB7"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:text="8"
                android:layout_height="wrap_content"
                android:id="@+id/btn8"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                app:strokeWidth="1dp"
                app:strokeColor="#673AB7"
                android:backgroundTint="#FFFFFF"
                android:textColor="#673AB7"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:text="9"
                android:layout_height="wrap_content"
                android:id="@+id/btn9"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                app:strokeWidth="1dp"
                app:strokeColor="#673AB7"
                android:backgroundTint="#FFFFFF"
                android:textColor="#673AB7"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:layout_height="wrap_content"
                android:id="@+id/btnSubtract"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                android:text="-"
                android:layout_column="3"
                android:layout_row="2"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:text="4"
                android:layout_height="wrap_content"
                android:id="@+id/btn4"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                app:strokeWidth="1dp"
                app:strokeColor="#673AB7"
                android:backgroundTint="#FFFFFF"
                android:textColor="#673AB7"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:text="5"
                android:layout_height="wrap_content"
                android:id="@+id/btn5"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                app:strokeWidth="1dp"
                app:strokeColor="#673AB7"
                android:backgroundTint="#FFFFFF"
                android:textColor="#673AB7"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:text="6"
                android:layout_height="wrap_content"
                android:id="@+id/btn6"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                app:strokeWidth="1dp"
                app:strokeColor="#673AB7"
                android:backgroundTint="#FFFFFF"
                android:textColor="#673AB7"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:text="1"
                android:layout_height="wrap_content"
                android:id="@+id/btn1"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                app:strokeWidth="1dp"
                app:strokeColor="#673AB7"
                android:backgroundTint="#FFFFFF"
                android:textColor="#673AB7"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:text="2"
                android:layout_height="wrap_content"
                android:id="@+id/btn2"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                app:strokeWidth="1dp"
                app:strokeColor="#673AB7"
                android:backgroundTint="#FFFFFF"
                android:textColor="#673AB7"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:text="3"
                android:layout_height="wrap_content"
                android:id="@+id/btn3"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                app:strokeWidth="1dp"
                app:strokeColor="#673AB7"
                android:backgroundTint="#FFFFFF"
                android:textColor="#673AB7"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

        <Button
                android:layout_height="wrap_content"
                android:id="@+id/btnSum"
                android:textSize="12sp"
                android:layout_margin="0dp"
                android:layout_columnWeight="1"
                android:text="+"
                android:layout_column="3"
                android:layout_row="3"
                android:layout_width="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_marginRight="17dp" />

    </GridLayout>
</LinearLayout>